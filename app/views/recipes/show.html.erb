<h2>Recipe Name: <%= @recipe.title %></h2>

<h3>Ingredients</h2>

<ul>
  <% if !@recipe.ingredients.empty? %>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= "#{ingredient.name} X #{ingredient.quantity}" %></li>
    <% end %>
  <% else %>
    <p> No Ingredients! </p>
<% end %>
</ul>
